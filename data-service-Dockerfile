FROM node:20-alpine

WORKDIR /app

# Dependencies first (cache layer)
COPY package.json ./
RUN npm install --production

# App code
COPY server.js ./

# Cloud Run uses PORT env variable
ENV PORT=8080
EXPOSE 8080

# Health check
HEALTHCHECK --interval=15s --timeout=5s --start-period=5s CMD wget -qO- http://localhost:8080/health || exit 1

USER node
CMD ["node", "server.js"]
